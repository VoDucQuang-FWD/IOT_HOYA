                                    <materialDesign:PackIcon  
                            Kind="ArrowRightBold"
                            Height="32"
                            Width="Auto" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Stretch"
                            >

                                    </materialDesign:PackIcon>

                                </Button>

                            </WrapPanel>

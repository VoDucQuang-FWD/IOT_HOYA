    x:Class="Hoya.View.DBHOYAView"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
    WindowStyle="None"
    ResizeMode="NoResize"
    Name="DBHOYA"
        DataContext="{StaticResource DBHoya1}"
        Title="DBHOYAView" Height="1080" Width="1920">

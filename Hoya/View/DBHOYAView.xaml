                                <Grid.RowDefinitions>
                                    <RowDefinition Height="97*"/>
                                    <RowDefinition Height="109*"/>
                                </Grid.RowDefinitions>
                                <Label HorizontalAlignment="Right" VerticalAlignment="Top" Content="{Binding valueCPU}" FontSize="20" ></Label>
                                <Label HorizontalAlignment="Right" VerticalAlignment="Top" Content="{Binding valueRam}" FontSize="20" Margin="0,0,200,0" ></Label>
                                <TabControl  Name="TabControl" Style="{DynamicResource TabControlStyle}" Margin="0,5,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.RowSpan="2" >

                                    <TabItem Header="    DATE    " FontSize="20" Style="{DynamicResource TabItemStyle}">
                                        <Grid>

                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition Height="0.5*"/>
                                            </Grid.RowDefinitions>
                                            <Grid Margin="0,0,0,5" >
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="0.5*"></ColumnDefinition>
                                                    <ColumnDefinition></ColumnDefinition>
                                                </Grid.ColumnDefinitions>
                                                <Grid Grid.Column="0" >
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="30"></RowDefinition>
                                                        <RowDefinition></RowDefinition>
                                                    </Grid.RowDefinitions>
                                                    <Grid>
                                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="DATA" FontSize="25" FontWeight="Bold" Foreground="Gray" ></TextBlock>
                                                    </Grid>
                                                    <Border Grid.Row="1" Margin="0,0,0,0"  Background="White"   CornerRadius="10" >

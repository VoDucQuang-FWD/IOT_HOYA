                                                            <DataGrid.Columns>
                                                                <DataGridTextColumn Width="1.5*"  Header="DATE" Binding="{Binding date , StringFormat=dd/MM/yyyy}" IsReadOnly="True"/>
                                                                <DataGridTextColumn Header="TIME" Width="1.5*"  Binding="{ Binding Time }" />
                                                                <DataGridTextColumn Header="BASKET" Binding="{Binding Basket}" IsReadOnly="True"/>
                                                                <DataGridTextColumn Header="MODEL" Binding="{Binding Model}" ></DataGridTextColumn>
                                                                <DataGridTemplateColumn Header="DETAL" >
                                                                    <DataGridTemplateColumn.CellTemplate>
                                                                        <DataTemplate  >
                                                                            <Button HorizontalAlignment="Left" Content="Click"
                                                                        DataContext="{StaticResource DBHoya1}"
                                                                       Command="{Binding Click}" 
                                                                   CommandParameter="{Binding ElementName=a, Path=SelectedItem}" Height="30" Width="60"/>
                                                                        </DataTemplate>
                                                                    </DataGridTemplateColumn.CellTemplate>
                                                                </DataGridTemplateColumn>
                                                            </DataGrid.Columns>
                                                        </DataGrid>

                                                    </Border>
                                                </Grid>
